<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<script>
    $('#myModal').modal('show');
</script>
<div class="task-cart-container">
    <div class="card" style=" border: none !important; padding-bottom:20px">
        <div class="card-body">
            <h5 class="card-title">Create Order</h5>

            <!-- Bordered Tabs -->
            @* <ul class="nav nav-tabs nav-tabs-bordered" id="borderedTab" role="tablist">
            <li class="nav-item" role="presentation">
            <button class="nav-link active" id="overview-tab" data-bs-toggle="tab" data-bs-target="#bordered-overview-tab" type="button" role="tab" aria-controls="overview-tab" aria-selected="true">Overview </button>
            </li>
            <li class="nav-item" role="presentation">
            <button class="nav-link" id="new-task-tab" data-bs-toggle="tab" data-bs-target="#bordered-new-task-tab" type="button" role="tab" aria-controls="new-task-tab" aria-selected="false">New Task </button>
            </li> *@

            </ul>
            <div class="tab-content pt-2 task-tab " id="borderedTabContent" style=" margin-top:2rem;">
                <div class=" tab-pane fade show active form-container " id="bordered-overview-tab" role="tabpanel" aria-labelledby="overview-tab">
                    <form>

                        <div class="row align-items-center ">
                            <!-- OrderType Dropdown -->
                            <div class="col-md-4 col-sm-12 mb-3">
                                @* <label for="orderType" class="form-label">Order Type</label> *@
                                <div class="input-group">
                                    <div class="input-group-text">Order Type</div>
                                    <select class="form-select" id="orderType" name="orderType">
                                        <option value="">Select Order Type</option>
                                        <option value="1">Type 1</option>
                                        <option value="2">Type 2</option>
                                    </select>
                                </div>
                            </div>

                            <!-- No of Vehicles (Number Input) -->
                            <div class="col-md-4 col-sm-12 mb-3">
                                <div class="input-group">
                                    <label for="productId" class="input-group-text">Product Id</label>
                                    <input type="number" placeholder="Enter Product Id " class="form-control" id="productId" name="productId" min="1" max="100">
                                </div>
                            </div>

                            <!-- Full Day Occupancy Checkbox -->
                            <div class="col-md-4 col-sm-12 form-check mb-3 fw-bold ">
                                <input type="checkbox" class="form-check-input text-center" id="fullDayOccupancy" name="fullDayOccupancy">
                                <label class="form-check-label" for="fullDayOccupancy">Full Day Occupancy</label>
                            </div>
                        </div>

                        <div class="mt-3">
                            <h6>Reapting task section</h6>
                            <!-- Repeat This Task Toggle -->
                            <div class="form-check form-switch mb-3 fw-bold">
                                <input class="form-check-input" type="checkbox" id="repeatTask" name="repeatTask">
                                <label class="form-check-label" for="repeatTask">Repeat this task</label>
                            </div>

                            <!-- Repeats Section (Initially Hidden) -->
                            <div class="row align-items-center repeats-section" id="repeatsSection">
                                <!-- Repeats Dropdown -->
                                <div class="col-md-6 col-sm-12 mb-3">
                                    <div class="input-group">
                                        <div class="input-group-text">Repeats</div>
                                        <select class="form-select" id="repeats" name="repeats">
                                            <option value="">Select Repeats</option>
                                            <option value="daily">Daily</option>
                                            <option value="weekly">Weekly</option>
                                            <option value="monthly">Monthly</option>
                                        </select>
                                    </div>
                                </div>
                                <!-- Ends On Calendar -->
                                <div class="col-md-6 col-sm-12 mb-3">
                                    <div class="input-group">
                                        <div class="input-group-text">Ends on</div>
                                        <input type="date" class="form-control" id="endsOn" name="endsOn">
                                    </div>
                                </div>
                                <!-- Repeats On Multi-select Dropdown -->
                                <div class="col-md-12 col-sm-12 mb-3">
                                    <label for="choices-multiple-remove-button" class="form-label">Repeats On</label>
                                    <select id="choices-multiple-remove-button" class="form-select" name="options" multiple>
                                        <option value="Sunday">Sunday</option>
                                        <option value="Monday">Monday</option>
                                        <option value="Tuesday">Tuesday</option>
                                        <option value="Wednesday">Wednesday</option>
                                        <option value="Thursday">Thursday</option>
                                        <option value="Friday">Friday</option>
                                        <option value="Saturday">Saturday</option>
                                    </select>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <!-- Pickup Type Dropdown -->
                            <div class="col-md-6 col-sm-12 mb-3">
                                @* <label for="pickupType" class="form-label">Pickup Type</label> *@
                                <div class="input-group">
                                    <div class="input-group-text">Pickup Type</div>
                                    <select class="form-select" id="pickupType" name="pickupType">
                                        <option value="">Select Pickup Type</option>
                                        <option value="curbside">Curbside</option>
                                        <option value="in-store">In-Store</option>
                                    </select>
                                </div>
                            </div>
                            <!-- Priority Dropdown -->
                            <div class="col-md-6 col-sm-12 mb-3">
                                @* <label for="priority" class="form-label">Priority</label> *@
                                <div class="input-group">
                                    <div class="input-group-text">Priority</div>
                                    <select class="form-select" id="priority" name="priority">
                                        <option value="">Select Priority</option>
                                        <option value="low">Low</option>
                                        <option value="medium">Medium</option>
                                        <option value="high">High</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end text-end">
                            @*   <button type="submit" class="btn   btn-color">Add Task</button> *@
                            <button class="btn btn-color" id="Add task">Add Task</button>
                        </div>
                    </form>
                </div>




            </div><!-- End Bordered Tabs -->

        </div>
    </div>
</div>

